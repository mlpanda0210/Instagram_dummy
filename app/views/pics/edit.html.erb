<%= form_for(@pic) do |f| %>
<% if @pic.errors.any? %>
  <div id="error_explanation">
    <h2><%= @pic.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @pic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>




<%= f.label :title %>
<%= f.text_field :title %>

<%= f.submit %>
<% end %>

<%= link_to '戻る', :back %>
