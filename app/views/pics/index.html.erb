

<p><%= notice %></p>

<%= form_for(@pic) do |f| %>
<% if @pic.errors.any? %>
  <div id="error_explanation">
    <h2><%= @pic.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @pic.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>




<%= f.label :title %>
<%= f.text_field :title %>

<%= f.submit %>
<% end %>

<% @pics.each do |pic| %>
<p>タイトル:<%= pic.title %></p>
<%= link_to "編集する", edit_pic_path(pic.id) %>
<%= link_to "削除する", pic_path(pic.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？'}  %>

<% end %>
